@* @page
@model TheCourseHubADO.Pages.IndexModel
@{
    ViewData["Title"] = "Students Dashboard";
}
<div class="container mx-auto p-8 max-w-4xl">
    <h1 class="text-3xl font-bold text-center text-gray-800 mb-6">Student Dashboard</h1>

    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="bg-blue-100 border-l-4 border-blue-500 text-blue-700 p-4 mb-6" role="alert">
            <p>@Model.Message</p>
        </div>
    }

    <!-- Search Form -->
    <div class="mb-8">
        <form method="get" class="row g-3 align-items-center">
            <div class="col-md-8">
                <input type="text" asp-for="SearchTerm"
                       class="form-control"
                       placeholder="Search by name or email..." />
            </div>
            <div class="col-md-4">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-search"></i> Search
                </button>
            </div>
        </form>

    </div>

    <div class="bg-white p-6 rounded-lg shadow-lg mb-8">
        <h2 class="text-xl font-semibold mb-4">Students List</h2>
        @if (Model.Students != null && Model.Students.Any())
        {
            <div class="table-responsive mt-4">
                <table class="table table-striped table-hover align-middle shadow-sm">
                    <thead class="table-primary">
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">First Name</th>
                            <th scope="col">Last Name</th>
                            <th scope="col">Email</th>
                            <th scope="col">Enrollment Date</th>
                            <th scope="col">DOB</th>
                            <th scope="col">City</th>
                            <th scope="col">Country</th>
                            <th scope="col">Active Courses</th>
                            <th scope="col" class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var student in Model.Students)
                        {
                            <tr>
                                <td>@student.StudId</td>
                                <td>@student.Fname</td>
                                <td>@student.Lname</td>
                                <td>@student.Email</td>
                                <td>@student.EnrollmentDate.ToString("yyyy-MM-dd")</td>
                                <td>@student.DOB?.ToString("yyyy-MM-dd")</td>
                                <td>@student.City</td>
                                <td>@student.Country</td>
                                <td>@student.ActiveCourseCount</td>
                                <td class="text-end">
                                    <div class="btn-group" role="group">
                                        <a asp-page="/EditPage" asp-route-id="@student.StudId"
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-pencil-square"></i> Edit
                                        </a>
                                        <form method="post" asp-page-handler="DeleteStudent" asp-route-id="@student.StudId"
                                              onsubmit="return confirm('Are you sure you want to delete this student?');" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                <i class="bi bi-trash"></i> Delete
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        }
        else
        {
            <p class="text-gray-500">No students found.</p>
        }
    </div>

    <div class="card shadow-sm mt-4">
        <div class="card-header bg-success text-white">
            <h5 class="mb-0">Add New Student</h5>
        </div>
        <div class="card-body">
            <form method="post" asp-page-handler="AddStudent">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="NewStudent.Fname" class="form-label">First Name</label>
                        <input asp-for="NewStudent.Fname" class="form-control" />
                        <span asp-validation-for="NewStudent.Fname" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="NewStudent.Lname" class="form-label">Last Name</label>
                        <input asp-for="NewStudent.Lname" class="form-control" />
                        <span asp-validation-for="NewStudent.Lname" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="NewStudent.Email" class="form-label">Email</label>
                        <input asp-for="NewStudent.Email" type="email" class="form-control" />
                        <span asp-validation-for="NewStudent.Email" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="NewStudent.EnrollmentDate" class="form-label">Enrollment Date</label>
                        <input asp-for="NewStudent.EnrollmentDate" type="date" class="form-control" />
                        <span asp-validation-for="NewStudent.EnrollmentDate" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="NewStudent.DOB" class="form-label">Date of Birth</label>
                        <input asp-for="NewStudent.DOB" type="date" class="form-control" />
                        <span asp-validation-for="NewStudent.DOB" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="NewStudent.City" class="form-label">City</label>
                        <input asp-for="NewStudent.City" class="form-control" />
                        <span asp-validation-for="NewStudent.City" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="NewStudent.Country" class="form-label">Country</label>
                        <input asp-for="NewStudent.Country" class="form-control" />
                        <span asp-validation-for="NewStudent.Country" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="NewStudent.ActiveCourseCount" class="form-label">Active Course Count</label>
                        <input asp-for="NewStudent.ActiveCourseCount" type="number" class="form-control" />
                        <span asp-validation-for="NewStudent.ActiveCourseCount" class="text-danger small"></span>
                    </div>
                </div>
                <div class="mt-4">
                    <button type="submit" class="btn btn-success w-100">
                        <i class="bi bi-plus-circle"></i> Add Student
                    </button>
                </div>
            </form>
        </div>
    </div>

</div> *@